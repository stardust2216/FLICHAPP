.bgc {
  height: 100%;
  width: 100%;
  position: absolute;
  background-image: url("../../static/background-img.png");
  background-size: cover;
  padding-top: 30rpx;
}
.box1 {
  width: 680rpx;
  background-color: #f7f3e8;
  box-shadow: 0 8px 4px #e5dcd1, 6px 8px 4px #e5dcd1;
