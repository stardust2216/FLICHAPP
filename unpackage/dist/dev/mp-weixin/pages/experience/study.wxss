/* 水平间距 */
.bgc {
  padding-top: 80rpx;
}
.heritage-list {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.heritage-item {
  display: flex;
  align-items: center;
  background-color: #ddd4cb;
  margin: auto;
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 8px;
  width: 90%;
}
.heritage-image {
  width: 100px;
  height: 130px;
  margin-right: 20px;
}
.heritage-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.heritage-text image {
  width: 50rpx;
  height: 50rpx;
}
.heritage-text-small {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}
.title {
  font-size: 15px;
  margin-top: 10rpx;
}
.location {
  font-size: 20px;
  margin-right: 15rpx;
}